<p id="notice"><%= notice %></p>

<h1>Listing Reservations</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone no</th>
      <th>Requests</th>
      <th>Text</th>
      <th>Table for</th>
      <th>Integer</th>
      <th>At time</th>
      <th>Datetime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.first_name %></td>
        <td><%= reservation.last_name %></td>
        <td><%= reservation.email %></td>
        <td><%= reservation.phone_no %></td>
        <td><%= reservation.requests %></td>
        <td><%= reservation.text %></td>
        <td><%= reservation.table_for %></td>
        <td><%= reservation.integer %></td>
        <td><%= reservation.at_time %></td>
        <td><%= reservation.datetime %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

